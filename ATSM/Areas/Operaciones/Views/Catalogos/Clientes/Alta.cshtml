@{
    Layout = null;
}
<div class="row mt-1 mt-md-2">
	<div class="col-12 col-md-6" id="fClient">
        <div class="row justify-content-around pt-1 pt-md-2 g-1">
            <div class="col-12 col-md-6">
                @Campos.GetInput("Nombre", true, 100, "Cliente", "", " text", "", true, true, "Cliente")
            </div>
            <div class="col-12 col-md-6">
                @Campos.GetInput("RazonSocial", true, 100, "Razon Social", "", "text", "", true, false, "Razon Social")
            </div>
        </div>
        <div class="row justify-content-start pt-1 pt-md-2 g-1">
            <div class="col-12 col-md-6">
                @Campos.GetInput("Domicilio", true, 50)
            </div>
            <div class="col-12 col-md-4">
                @Campos.GetInput("CP", true, 10)
            </div>
        </div>
        <div class="row justify-content-around pt-1 pt-md-2 g-1">
            <div class="col-12 col-md-6">
                @Campos.GetInput("Estado", true, 50)
            </div>
            <div class="col-12 col-md-6">
                @Campos.GetInput("Ciudad", true, 50)
            </div>
        </div>
        <div class="row justify-content-around pt-1 pt-md-2 g-1">
            <div class="col-12 col-md-6">
                @Campos.GetInput("Parque", true, 50, "", "", "text", "", true, false, "Parque Ind.")
            </div>
            <div class="col-12 col-md-6">
                @Campos.GetInput("Grupo", true, 50)
            </div>
        </div>
        <div class="row justify-content-around pt-1 pt-md-2 g-1">
            <div class="col-12 col-md-6">
                @Campos.GetInput("WebSite", true, 100)
            </div>
            <div class="col-12 col-md-6">
                @Campos.GetInput("Giro", true, 50)
            </div>
        </div>
        <div class="row justify-content-between pt-1 pt-md-2 g-1">
            <div class="col-12 col-md-4">
                @Campos.GetInput("RFC", true, 20)
            </div>
            <div class="col-12 col-md-4">
                @Campos.GetInput("Conmutador", true, 20)
            </div>
            <div class="col-12 col-md-3">
                @Campos.Switch()
            </div>
        </div>
        <div class="row justify-content-between pt-1 pt-md-2 g-1">
            <div class="col-12 col-md-6">
		        <div class="form-check">
			        <input class="form-check-input num" type="radio" name="IdTipo" id="IdTipo" value="1" checked>
                    <label class="form-check-label" for="Nuevos">Nuevos</label>
                </div>
		        <div class="form-check">
			        <input class="form-check-input" type="radio" name="IdTipo" value="2">
                    <label class="form-check-label" for="AAA">AAA</label>
                </div>
		        <div class="form-check">
			        <input class="form-check-input" type="radio" name="IdTipo" value="3">
                    <label class="form-check-label" for="AA">AA</label>
                </div>
		        <div class="form-check">
			        <input class="form-check-input" type="radio" name="IdTipo" value="4">
                    <label class="form-check-label" for="A">A</label>
                </div>
		        <div class="form-check">
			        <input class="form-check-input" type="radio" name="IdTipo" value="5">
                    <label class="form-check-label" for="Agencia">Agencia Aduanal</label>
                </div>
		        <div class="form-check">
			        <input class="form-check-input" type="radio" name="IdTipo" value="6">
                    <label class="form-check-label" for="Similares">Similares</label>
                </div>
		        <div class="form-check">
			        <input class="form-check-input" type="radio" name="IdTipo" value="7">
                    <label class="form-check-label" for="Baja">Baja</label>
                </div>
		        <div class="form-check">
			        <input class="form-check-input" type="radio" name="IdTipo" value="8">
                    <label class="form-check-label" for="Otros">Otros</label>
                </div>
            </div>
            <div class="col-12 col-md-8">
                
            </div>
        </div>
		<hr />
        <div class="row justify-content-around pt-2 pt-md-3">
            <div class="col-4">
                @Campos.BtnCle()
            </div>
            <div class="col-4">
                @Campos.BtnDel("del", "dCliente")
            </div>
            <div class="col-4">
                @Campos.BtnReg("reg", "cCliente")
            </div>
        </div>
    </div>
	<div class="col-12 col-md-6">
        <div class="accordion" id="dataClientes">
            <div class="accordion-item">
                <h2 class="accordion-header" id="headingOne">
                    <button class="accordion-button collapsed py-1 fw-bolder" type="button" data-bs-toggle="collapse" data-bs-target="#contactos" aria-expanded="true" aria-controls="contactos">Contactos</button>
                </h2>
                <div id="contactos" class="accordion-collapse collapse" aria-labelledby="headingOne" data-bs-parent="#dataClientes">
                    <div class="accordion-body" id="fContact">
                        @RenderPage("~/Areas/Operaciones/Views/Catalogos/Clientes/Contactos.cshtml")
                    </div>
                </div>
            </div>
            <div class="accordion-item">
                <h2 class="accordion-header" id="headingTwo">
                    <button class="accordion-button collapsed py-1 fw-bolder"" type="button" data-bs-toggle="collapse" data-bs-target="#actividad" aria-expanded="false" aria-controls="actividad">Registro de Actividad</button>
                </h2>
                <div id="actividad" class="accordion-collapse collapse" aria-labelledby="headingTwo" data-bs-parent="#dataClientes">
                    <div class="accordion-body" id="fActivity">
                        @RenderPage("~/Areas/Operaciones/Views/Catalogos/Clientes/Actividad.cshtml")
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


