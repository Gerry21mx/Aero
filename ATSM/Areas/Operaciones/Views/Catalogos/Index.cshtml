@{ 
	ViewBag.Title = "Catalogos";
}
<div class="container">
    <div class="shadow-lg p-3 mt-2 mb-4 text-center bg-light rounded"><h1>Catalogos</h1></div>
	<div class="row justify-content-around">
        @if (Funciones.VRoles("mOpeCatAeropuertos").Status) {
		    <div class="col-6 col-md-3 mt-2">
			    <a href="Aeropuertos" class="text-decoration-none">
			        <div class="card bg-light">
                        <div class="card-body text-center">
                            <h5 class="card-title text-body">Aeropuertos</h5>
						    <img src="~/img/airport-tower.svg" alt="Aeropuertos" class="img-fluid img-thumbnail p-2 rounded" style="height:80px;"/>
                        </div>
                    </div>
                </a>
            </div>
		}
        @if (Funciones.VRoles("mOpeCatClientes").Status) {
		    <div class="col-6 col-md-3 mt-2">
			    <a href="Clientes" class="text-decoration-none">
			        <div class="card bg-light">
                        <div class="card-body text-center">
                            <h5 class="card-title text-body">Clientes</h5>
						    <img src="~/img/businessman-employee.svg" alt="Clientes" class="img-fluid img-thumbnail p-2 rounded" style="height:80px;"/>
                        </div>
                    </div>
                </a>
            </div>
		}
	</div>
</div>
