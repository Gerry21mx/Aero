@using System.Data.SqlClient
@{
    
}
<form v-on:submit.prevent="postCotizacion(cotizacion)">
    <div class="row justify-content-around mt-1 mt-md-2">
        <div class="col-12 col-md-6">
            <div class="form-group">
                <label>Cliente</label>
                <input type="text" class="form-control" v-model="cotizacion.cliente" required/>
            </div>
        </div>
        <div class="col-12 col-md-6">
            <div class="form-group">
                <label>Fecha</label>
                <input type="date" class="form-control"/>
            </div>
        </div>
    </div>
    <div class="row justify-content-around mt-1 mt-md-2">
        <div class="col-12 col-md-6">
            <div class="form-group">
                <label>Origen</label>
                <input type="text" class="form-control" v-model="cotizacion.origen"/>
            </div>
        </div>
        <div class="col-12 col-md-6">
            <div class="form-group">
                <label>Destino</label>
                <input type="text" class="form-control" />
            </div>
        </div>
    </div>
    <div class="row justify-content-around mt-1 mt-md-2">
        <div class="col-12 col-md-6">
            <div class="form-group">
                <label>Bultos</label>
                <input type="text" class="form-control" />
            </div>
        </div>
        <div class="col-12 col-md-6">
            <div class="form-group">
                <label>Medidas</label>
                <input type="text" class="form-control" />
            </div>
        </div>
    </div>
    <div class="row justify-content-around mt-1 mt-md-2">
        <div class="col-12 col-md-6">
            <div class="form-group">
                <label>Peso</label>
                <input type="text" class="form-control" />
            </div>
        </div>
        <div class="col-12 col-md-6">
            <div class="form-group">
                <label>Hazmat</label>
                <input type="text" class="form-control" />
            </div>
        </div>
    </div>
    <div class="row justify-content-around mt-1 mt-md-2">
        <div class="col-12 col-md-6">
            <div class="form-group">
                <label>Servicio</label>
                <input type="text" class="form-control" />
            </div>
        </div>
        <div class="col-12 col-md-6">
            @*@Campos.Switch("", null, null, "Despaletizable")*@
            <div class="form-check form-switch">
                <input class="form-check-input" type="checkbox">
                <label class="form-check-label" for="flexSwitchCheckDefault">Despaletizable</label>
            </div>
        </div>
    </div>
    <div class="row justify-content-around mt-1 mt-md-2">
        <div class="col-12">
            @*@Campos.GetInput("", true, 200, "Descripcion")*@
            <div class="form-group">
                <label>Descripcion</label>
                <input type="text" class="form-control" />
            </div>
        </div>
    </div>
    <div class="row justify-content-around mt-1 mt-md-2">
        <div class="col-6">
            @*@Campos.GetInput("Fecha Aprobacion", true, 10, "", "fec text-center", "date")*@
            <div class="form-group">
                <label>Fecha Aprobacion</label>
                <input type="date" class="form-control" />
            </div>
        </div>
        <div class="col-6">
            @*@Campos.GetInput("Fecha Rechazo", true, 10, "", "fec text-center", "date")*@
            <div class="form-group">
                <label>Fecha Rechazo</label>
                <input type="date" class="form-control" />
            </div>
        </div>
    </div>
    <div class="row mt-1 mt-md-2">
        <div class="col-12 d-flex justify-content-end">
            <button class="btn btn-outline-danger me-3">Limpiar</button>
            <button class="btn btn-primary">Guardar</button>
        </div>
        @*@Campos.BtnCle()*@
        @*<div class="col-4">
            @Campos.BtnDel("del", "dCotizacion")
        </div>*@
        @*<div class="col-4">
            @Campos.BtnReg("reg", "cCotizacion")
        </div>*@
    </div>
</form>
