@{ 
	ViewBag.Title = "Movimientos";
}
<div class="container">
    <div class="shadow-lg p-3 mt-2 mb-4 text-center bg-light rounded"><h1>Catalogos</h1></div>
	<div class="row justify-content-around">
        @if (Funciones.VRoles("mOpeMovCotizacion").Status) {
		    <div class="col-6 col-md-3 mt-2">
			    <a href="Cotizacion" class="text-decoration-none">
			        <div class="card bg-light">
                        <div class="card-body text-center">
                            <h5 class="card-title text-body">Cotización</h5>
						    <img src="~/img/tracking-receipt.svg" alt="Cotización" class="img-fluid img-thumbnail p-2 rounded" style="height:80px;"/>
                        </div>
                    </div>
                </a>
            </div>
		}
        @if (Funciones.VRoles("mOpeMovConfirmacion").Status) {
		    <div class="col-6 col-md-3 mt-2">
			    <a href="Confirmacion" class="text-decoration-none">
			        <div class="card bg-light">
                        <div class="card-body text-center">
                            <h5 class="card-title text-body">Confirmación</h5>
						    <img src="~/img/time-check-symbol.svg" alt="Confirmación" class="img-fluid img-thumbnail p-2 rounded" style="height:80px;"/>
                        </div>
                    </div>
                </a>
            </div>
		}
        @if (Funciones.VRoles("mOpeMovActivacion").Status) {
		    <div class="col-6 col-md-3 mt-2">
			    <a href="Activacion" class="text-decoration-none">
			        <div class="card bg-light">
                        <div class="card-body text-center">
                            <h5 class="card-title text-body">Activación</h5>
						    <img src="~/img/interactive.svg" alt="Activación" class="img-fluid img-thumbnail p-2 rounded" style="height:80px;"/>
                        </div>
                    </div>
                </a>
            </div>
		}
	</div>
</div>
