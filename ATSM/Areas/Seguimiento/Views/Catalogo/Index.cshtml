@{ 
	ViewBag.Title = "Catalogos";
}
<div class="container">
    <div class="shadow-lg p-3 mt-2 mb-4 text-center bg-light rounded"><h1>Catalogos</h1></div>
	<div class="row justify-content-around">
        @if (Funciones.VRoles("Aeropuerto").Status) {
		    <div class="col-6 col-md-3 mt-2">
			    <a href="Aeropuerto" class="text-decoration-none">
			        <div class="card bg-light">
                        <div class="card-body text-center">
                            <h5 class="card-title text-body">Aeropuertos</h5>
						    <img src="~/img/airport-tower.svg" alt="Crew" class="img-fluid img-thumbnail p-2 rounded" style="height:80px;"/>
                        </div>
                    </div>
                </a>
            </div>
		}
        @if (Funciones.VRoles("Demora").Status) {
		    <div class="col-6 col-md-3 mt-2">
			    <a href="Demora" class="text-decoration-none">
			        <div class="card bg-light">
                        <div class="card-body text-center">
                            <h5 class="card-title text-body">Demoras</h5>
						    <img src="~/img/plane-slash-solid.svg" alt="Crew" class="img-fluid img-thumbnail p-2 rounded" style="height:80px;"/>
                        </div>
                    </div>
                </a>
            </div>
		}
        @if (Funciones.VRoles("Ruta").Status) {
		    <div class="col-6 col-md-3 mt-2">
			    <a href="Ruta" class="text-decoration-none">
			        <div class="card bg-light">
                        <div class="card-body text-center">
                            <h5 class="card-title text-body">Rutas</h5>
						    <img src="~/img/route-solid.svg" alt="Crew" class="img-fluid img-thumbnail p-2 rounded" style="height:80px;"/>
                        </div>
                    </div>
                </a>
            </div>
		}
        @if (Funciones.VRoles("TipoVuelo").Status) {
		    <div class="col-6 col-md-3 mt-2">
			    <a href="TipoVuelo" class="text-decoration-none">
			        <div class="card bg-light">
                        <div class="card-body text-center">
                            <h5 class="card-title text-body">Tipo de Vuelo</h5>
						    <img src="~/img/flight-ticket.svg" alt="Crew" class="img-fluid img-thumbnail p-2 rounded" style="height:80px;"/>
                        </div>
                    </div>
                </a>
            </div>
		}
	</div>
</div>
