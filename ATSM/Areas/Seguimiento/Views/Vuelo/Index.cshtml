@{
	ViewBag.Title = "Vuelo";
}
<div class="container">
    <div class="shadow-lg p-3 mt-2 mb-4 text-center bg-light rounded"><h1>Vuelos</h1></div>
	<div class="row justify-content-around">
        @if (Funciones.VRoles("Vuelo").Status) {
		    <div class="col-6 col-md-3 mt-2">
			    <a href="Vuelo/" class="text-decoration-none">
			        <div class="card bg-light">
                        <div class="card-body text-center">
                            <h5 class="card-title text-body">Vuelo</h5>
						    <img src="~/img/plane.svg" alt="Crew" class="img-fluid img-thumbnail p-2 rounded" style="height:80px;"/>
                        </div>
                    </div>
                </a>
            </div>
        }
        @if (Funciones.VRoles("General").Status) {
		    <div class="col-6 col-md-3 mt-2">
			    <a href="General/" class="text-decoration-none">
			        <div class="card bg-light">
                        <div class="card-body text-center">
                            <h5 class="card-title text-body">General</h5>
						    <img src="~/img/report.svg" alt="General" class="img-fluid img-thumbnail p-2 rounded" style="height:80px;"/>
                        </div>
                    </div>
                </a>
            </div>
        }
        @if (Funciones.VRoles("mVuelosSeg").Status) {
		    <div class="col-6 col-md-3 mt-2">
			    <a href="Timeline/" class="text-decoration-none">
			        <div class="card bg-light">
                        <div class="card-body text-center">
                            <h5 class="card-title text-body">Time Line</h5>
						    <img src="~/img/timeline.svg" alt="Time Line" class="img-fluid img-thumbnail p-2 rounded" style="height:80px;"/>
                        </div>
                    </div>
                </a>
            </div>
		}
	</div>
</div>
