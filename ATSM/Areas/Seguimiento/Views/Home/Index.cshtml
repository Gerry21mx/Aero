@{
	ViewBag.Title = "Seguimiento de Vuelo";
}
<div class="container">
    <div class="shadow-lg p-3 mt-2 mb-4 text-center bg-light rounded"><h1><img src="~/img/logoSeguimiento.png" alt="Alternate Text" style="height=40px;width:40px;"/> Segumiento de Vuelo</h1></div>
	<div class="row justify-content-around">
        @if (Funciones.VRoles("mCatalogosSeg").Status) {
		    <div class="col-6 col-md-3 mt-2">
			    <a href="~/Seguimiento/Catalogo/" class="text-decoration-none">
			        <div class="card bg-light">
                        <div class="card-body text-center">
                            <h5 class="card-title text-body">Catalogos</h5>
						    <img src="~/img/catalog.svg" alt="Crew" class="img-fluid img-thumbnail p-2 rounded" style="height:80px;"/>
                        </div>
                    </div>
                </a>
            </div>
		}
        @if (Funciones.VRoles("mVuelosSeg").Status) {
		    <div class="col-6 col-md-3 mt-2">
			    <a href="~/Seguimiento/Vuelo/" class="text-decoration-none">
			        <div class="card bg-light">
                        <div class="card-body text-center">
                            <h5 class="card-title text-body">Vuelos</h5>
						    <img src="~/img/plane.svg" alt="Crew" class="img-fluid img-thumbnail p-2 rounded" style="height:80px;"/>
                        </div>
                    </div>
                </a>
            </div>
        }
        @if (Funciones.VRoles("mReportesSeg").Status) {
		    <div class="col-6 col-md-3 mt-2">
			    <a href="~/Seguimiento/Reportes/" class="text-decoration-none">
			        <div class="card bg-light">
                        <div class="card-body text-center">
                            <h5 class="card-title text-body">Reportes</h5>
						    <img src="~/img/report.svg" alt="Pilotos" class="img-fluid img-thumbnail p-2 rounded" style="height:80px;"/>
                        </div>
                    </div>
                </a>
            </div>
        }
        @if (Funciones.VRoles("mEstadisticosSeg").Status) {
		    <div class="col-6 col-md-3 mt-2">
			    <a href="~/Seguimiento/Estadistico/" class="text-decoration-none">
			        <div class="card bg-light">
                        <div class="card-body text-center">
                            <h5 class="card-title text-body">Estadisticos</h5>
						    <img src="~/img/statistics.svg" alt="Pilotos" class="img-fluid img-thumbnail p-2 rounded" style="height:80px;"/>
                        </div>
                    </div>
                </a>
            </div>
        }
        @if (Funciones.VRoles("Administrador").Status) {
		    <div class="col-6 col-md-3 mt-2">
			    <a href="~/Seguimiento/Admin/" class="text-decoration-none">
			        <div class="card bg-light">
                        <div class="card-body text-center">
                            <h5 class="card-title text-body">Administrador</h5>
						    <img src="~/img/system-administrator-sysadmin.svg" alt="Pilotos" class="img-fluid img-thumbnail p-2 rounded" style="height:80px;"/>
                        </div>
                    </div>
                </a>
            </div>
		}
	</div>
</div>