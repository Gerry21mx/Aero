@{ 
	ViewBag.Title = "Reporte de Emisiones";
	var x = ModeloAeronave.GetModeloAeronaves();
}

<div class="container pt-3">
	<div class="shadow-sm p-2 mb-2 bg-light rounded"><h3>Reporte de Emisiones</h3></div>
    <div class="row justify-content-around">
		<div class="col-6 col-md-4 col-lg-2 mt-1 mt-md-2">
			@Campos.GetInput("Desde",true,10,"","text-end fec","date","",true,false,"<i class='fas fa-calendar-alt'></i>")
		</div>
		<div class="col-6 col-md-4 col-lg-2 mt-1 mt-md-2">
			@Campos.GetInput("Hasta",true,10,"","text-end fec","date","",true,false,"<i class='fas fa-calendar-alt'></i>")
		</div>
		<div class="col-6 col-md-3 mt-1 mt-md-2">
			<div class="input-group input-group-sm mb-3">
				<div class="input-group-prepend">
					<label class="input-group-text" for="Operacion">Operacion</label>
				</div>
				<select class="custom-select custom-select-sm" id="Operacion">
                    <option value="0">Ambos</option>
                    <option value="2" selected>Nacionales</option>
                    <option value="1">Internacionales</option>
				</select>
			</div>
		</div>
		<div class="col-4 col-md-2 mt-1 mt-md-2 text-center">
			<button type="button" class="btn btn-sm btn-primary" id="rep">Reporte</button>
		</div>
	</div>
</div>
<hr />
<div class="row">
	<div class="col sz-font-8 ml-2 mr-2" id="tabContainer"></div>
</div>

@section Scripts{
    @Scripts.Render("~/Areas/Seguimiento/Views/Reportes/Emisiones.js")
}