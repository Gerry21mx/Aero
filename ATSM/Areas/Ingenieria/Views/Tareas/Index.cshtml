@{ 
	ViewBag.Title = "Tareas";
}
<div class="container">
    <div class="shadow-lg p-3 mt-2 mb-4 text-center bg-light rounded"><h1>@ViewBag.Title</h1></div>
	<div class="row justify-content-around">
		@if (Funciones.VRoles("mIngTarTareas").Status) {
			<div class="col-6 col-md-3 mt-2">
				<a href="Tareas" class="text-decoration-none">
					<div class="card bg-light">
						<div class="card-body text-center">
							<h5 class="card-title text-body">Tareas</h5>
							<img src="~/img/industry-worker-with-cap-protection-and-a-laptop.svg" alt="Tareas" class="img-fluid img-thumbnail p-2 rounded" style="height:80px;"/>
						</div>
					</div>
				</a>
			</div>
		}
	</div>
</div>