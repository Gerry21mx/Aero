@using System.Data.SqlClient
@{
    
}
<div class="row justify-content-around mt-0 mt-md-2">
	<div class="col-6 col-md-3 col-xl-2 mt-1 mt-md-2">
		@Campos.GetInput("Codigo",true,100,"Codigo")
	</div>
	<div class="col-6 col-md-5 col-xl-4 mt-1 mt-md-2">
		@Campos.GetInput("Descripcion",true,100,"Descripcion")
	</div>
	<div class="col-6 col-md-3 col-xl-2 align-self-center">
		@Campos.Switch()
	</div>
</div>
<div class="row justify-content-around mt-0 mt-md-2">
	<div class="col-12 col-md-5 mt-1 mt-md-2">
		<div class="row g-1">
			<div class="col-6">
				@Campos.SelectCapacidad(true)
			</div>
			<div class="col-5">
				@Campos.GetInput("Cantidad",true,3,"","text-end")
			</div>
			<div class="col-1 d-grid">
				<button id="addCap" class="btn btn-sm btn-success"><i class="fas fa-plus-circle"></i></button>
			</div>
		</div>
		<div class="row justify-content-center">
			<div class="col-12 col-md-10 col-xl-8 table-responsive sz-font-75 mt-1 mt-md-2">
				<table id="tCapacidades" class="table table-sm compact w-100">
					<thead class="bg-success">
						<tr>
							<th>Capacidad</th>
							<th>Cantidad</th>
							<th></th>
						</tr>
					</thead>
				</table>
			</div>
		</div>
	</div>
	<div class="col-12 col-md-5 mt-1 mt-md-2">
		<div class="row">
			<div class="col-11">
				@Campos.SelectLimites(true)
			</div>
			<div class="col-1 d-grid">
				<button id="addLim" class="btn btn-sm btn-success"><i class="fas fa-plus-circle"></i></button>
			</div>
		</div>
		<div class="row justify-content-center">
			<div class="col-12 col-md-10 col-xl-8 table-responsive sz-font-75 mt-1 mt-md-2">
				<table id="tLimites" class="table table-sm compact w-100">
					<thead class="bg-success">
						<tr>
							<th>Limite</th>
							<th></th>
						</tr>
					</thead>
				</table>
			</div>
		</div>
	</div>
</div>
<hr />
<div class="row justify-content-center mt-0 mt-md-2">
	<div class="col-4">
		@Campos.BtnCle()
	</div>
	<div class="col-4">
		@Campos.BtnDel("del","dFamilia")
	</div>
	<div class="col-4">
		@Campos.BtnReg("reg","cFamilia")
	</div>
</div>
<hr />