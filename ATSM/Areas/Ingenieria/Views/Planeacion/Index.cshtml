@{ 
	ViewBag.Title = "Tareas";
}
<div class="container">
    <div class="shadow-lg p-3 mt-2 mb-4 text-center bg-light rounded"><h1>@ViewBag.Title</h1></div>
	<div class="row justify-content-around">
		@if (Funciones.VRoles("mIngPlaProgramacion").Status) {
			<div class="col-6 col-md-3 mt-2">
				<a href="Programacion" class="text-decoration-none">
					<div class="card bg-light">
						<div class="card-body text-center">
							<h5 class="card-title text-body">Programación</h5>
							<img src="~/img/list.svg" alt="Programación" class="img-fluid img-thumbnail p-2 rounded" style="height:80px;"/>
						</div>
					</div>
				</a>
			</div>
		}
		@if (Funciones.VRoles("mIngPlaPronostico").Status) {
			<div class="col-6 col-md-3 mt-2">
				<a href="Pronostico" class="text-decoration-none">
					<div class="card bg-light">
						<div class="card-body text-center">
							<h5 class="card-title text-body">Pronóstico</h5>
							<img src="~/img/list.svg" alt="Pronóstico" class="img-fluid img-thumbnail p-2 rounded" style="height:80px;"/>
						</div>
					</div>
				</a>
			</div>
		}
		@if (Funciones.VRoles("mIngPlaOTs").Status) {
			<div class="col-6 col-md-3 mt-2">
				<a href="ots" class="text-decoration-none">
					<div class="card bg-light">
						<div class="card-body text-center">
							<h5 class="card-title text-body">Ordenes de Trabajo</h5>
							<img src="~/img/list.svg" alt="Ordenes de Trabajo" class="img-fluid img-thumbnail p-2 rounded" style="height:80px;"/>
						</div>
					</div>
				</a>
			</div>
		}
	</div>
</div>