@{ 
	ViewBag.Title = "Items";
}
<div class="container">
    <div class="shadow-lg p-3 mt-2 mb-4 text-center bg-light rounded"><h1>@ViewBag.Title</h1></div>
	<div class="row justify-content-around">
        @if (Funciones.VRoles("mIngRepComMen").Status) {
            <div class="col-6 col-md-3 mt-2">
			    <a href="ComponentesMenores" class="text-decoration-none">
			        <div class="card bg-light">
                        <div class="card-body text-center">
                            <h5 class="card-title text-body">Componentes Menores</h5>
						    <img src="~/img/hierarchical-structure-diagram.svg" alt="Componentes Menores" class="img-fluid img-thumbnail p-2 rounded" style="height:80px;"/>
                        </div>
                    </div>
                </a>
            </div>
        }
        @if (Funciones.VRoles("mIngRepItmMay").Status) {
		    <div class="col-6 col-md-3 mt-2">
			    <a href="ItemsMayores" class="text-decoration-none">
			        <div class="card bg-light">
                        <div class="card-body text-center">
                            <h5 class="card-title text-body">Items Mayores</h5>
						    <img src="~/img/battery.svg" alt="Items Mayores" class="img-fluid img-thumbnail p-2 rounded" style="height:80px;"/>
                        </div>
                    </div>
                </a>
            </div>
        }
        @if (Funciones.VRoles("mIngRepResAer").Status) {
		    <div class="col-6 col-md-3 mt-2">
			    <a href="ResumenAeronave" class="text-decoration-none">
			        <div class="card bg-light">
                        <div class="card-body text-center">
                            <h5 class="card-title text-body">Resumen Aeronave</h5>
						    <img src="~/img/installation-symbol.svg" alt="Resumen Aeronave" class="img-fluid img-thumbnail p-2 rounded" style="height:80px;"/>
                        </div>
                    </div>
                </a>
            </div>
        }
        @if (Funciones.VRoles("mIngRepStruct").Status) {
		    <div class="col-6 col-md-3 mt-2">
			    <a href="Arbol" class="text-decoration-none">
			        <div class="card bg-light">
                        <div class="card-body text-center">
                            <h5 class="card-title text-body">Estructuras</h5>
						    <img src="~/img/planning.svg" alt="Estructuras" class="img-fluid img-thumbnail p-2 rounded" style="height:80px;"/>
                        </div>
                    </div>
                </a>
            </div>
        }
	</div>
</div>


