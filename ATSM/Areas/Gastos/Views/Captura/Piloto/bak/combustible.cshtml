<div class="row justify-content-around gx-1">
	<div class="col-12 col-sm-6 col-md-4 col-lg-2 mt-1 mt-md-2">
		<div class="input-group input-group-sm w-100">
			<label class="input-group-text" for="IdAeropuerto">Aeropuerto</label>
			<select class="form-select" id="IdAeropuerto"></select>
		</div>
	</div>
	<div class="col-12 col-sm-6 col-md-4 col-lg-2 mt-1 mt-md-2">
		@Campos.GetInput("Factura",true,30)
	</div>
	<div class="col-12 col-sm-6 col-md-4 col-lg-2 mt-1 mt-md-2">
		@Campos.GetInput("LTS_Combustible",true,18,"Lts","dec text-end","","",true,false,"Litros")
	</div>
	<div class="col-12 col-sm-6 col-md-4 col-lg-2 mt-1 mt-md-2">
		@Campos.GetInput("Galones",true,18,"Gal","dec text-end", "number")
	</div>
	<div class="col-12 col-sm-6 col-md-4 col-lg-2 mt-1 mt-md-2">
		@Campos.GetInput("PPL",true,18,"","mon text-end","number","",false,false,"<i class='fas fa-dollar-sign'></i>&nbsp;Litro")
	</div>

	<div class="col-12 col-sm-6 col-md-4 col-lg-2 mt-1 mt-md-2">
		@Campos.GetInput("Subtotal",true,18,"","mon text-end", "number","",false)
	</div>
	<div class="col-12 col-sm-6 col-md-4 col-lg-2 mt-1 mt-md-2">
		@Campos.GetInput("P_IVA",true,5,"","dec text-end", "number","",true,false,"% IVA")
	</div>
	<div class="col-12 col-sm-6 col-md-4 col-lg-2 mt-1 mt-md-2">
		@Campos.GetInput("IVA",true,12,"","mon text-end", "number","",false)
	</div>
	<div class="col-12 col-sm-6 col-md-4 col-lg-2 mt-1 mt-md-2">
		@Campos.GetInput("Total",true,12,"","mon text-end", "number")
	</div>
	<div class="col-12 col-sm-6 col-md-4 col-lg-2 mt-1 mt-md-2">
		@Campos.SelectMonedas(true,"IdMoneda","num")
	</div>
	<div class="col-12 col-sm-6 col-md-4 col-lg-2 mt-1 mt-md-2">
		@Campos.SelectSaldos(true,"IdSaldo","num", true)
	</div>

	<div class="col-12 col-sm-6 col-md-4 col-lg-2 mt-1 mt-md-2">
		@Campos.Switch("sFactura4",null,null,"Factura/Recibo")
	</div>
	<div class="col-12 col-sm-6 col-md-4 col-lg-2 mt-1 mt-md-2">
		@Campos.Switch("sXML4",null,null,"XML")
	</div>
	<div class="col-12 col-sm-6 col-md-4 col-lg-2 mt-1 mt-md-2 d-grid">
		<button name="addg" data-tg="4" class="btn btn-sm btn-success btn-block">Agregar</button>
	</div>
</div>
<hr />
<div class="table-responsive">
	<table id="t4" class="table table-sm table-striped table-hover compact w-100 sz-font-75">
		<thead class="thead-blue">
			<tr>
				<th>APTO</th>
				<th>Factura</th>
				<th>Litros</th>
				<th>$ x Lto</th>
				<th>Subtotal</th>
				<th>IVA</th>
				<th>Total</th>
				<th>Moneda</th>
				<th>Saldo</th>
			</tr>
		</thead>
	</table>
</div>