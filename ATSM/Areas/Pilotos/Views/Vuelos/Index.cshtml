
@{ 
    ViewBag.Title="Vuelos";
}
<div class="container">
    <div class="shadow-lg p-3 mt-2 mb-4 text-center bg-light rounded"><h1>@ViewBag.Title</h1></div>
	<div class="row justify-content-around">
		<div class="col-6 col-md-3 mt-2">
			<a href="Vuelo" class="text-decoration-none">
			    <div class="card bg-light">
                    <div class="card-body text-center">
                        <h5 class="card-title text-body">Vuelos</h5>
						<img src="~/img/plane.svg" alt="Crew" class="img-fluid img-thumbnail p-2 rounded" style="height:80px;"/>
                    </div>
                </div>
            </a>
        </div>
		<div class="col-6 col-md-3 mt-2">
			<a href="Bitacora" class="text-decoration-none">
			    <div class="card bg-light">
                    <div class="card-body text-center">
                        <h5 class="card-title text-body">Bitacoras</h5>
						<img src="~/img/flight-ticket.svg" alt="Crew" class="img-fluid img-thumbnail p-2 rounded" style="height:80px;"/>
                    </div>
                </div>
            </a>
        </div>
		<div class="col-6 col-md-3 mt-2">
			<a href="Itinerario" class="text-decoration-none">
			    <div class="card bg-light">
                    <div class="card-body text-center">
                        <h5 class="card-title text-body">Itinerarios</h5>
						<img src="~/img/schedules-airport.svg" alt="Crew" class="img-fluid img-thumbnail p-2 rounded" style="height:80px;"/>
                    </div>
                </div>
            </a>
        </div>
	</div>
</div>
