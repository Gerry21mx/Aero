			<span class="lineal">&nbsp;</span>
				<b class="leyenda">Cuenta</b>
			<span class="linear">&nbsp;</span>
		</div>
	</div>
	<div class="col-12 col-sm-6 col-md-3 mt-1 mt-md-2">
		@Campos.SelectCrews(true,"IdCrew","num","Piloto",false,false,1)
