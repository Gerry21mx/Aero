	<div class="col-12 col-sm-6 col-md-3 mt-1 mt-md-2">
		@Campos.GetInput("Banco",true,50)
	</div>
	<div class="col-12 col-sm-6 col-md-3 mt-1 mt-md-2">
		@Campos.GetInput("Cuenta",true,30)
